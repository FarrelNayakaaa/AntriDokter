<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeFragment">

    <!-- HEADER DENGAN BENTUK LENGKUNG -->
    <LinearLayout
        android:id="@+id/header_bg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:background="@drawable/bg_header_curve"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- SCROLL VIEW -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:overScrollMode="never">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- GREETING -->
            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, User"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"
                android:layout_marginStart="10dp" />

            <!-- FEATURE CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:weightSum="3">

                <!-- HISTORY -->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_green"
                        android:padding="8dp"
                        app:srcCompat="@drawable/ic_history"
                        app:tint="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="History"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <!-- NOTIFY -->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_yellow"
                        android:padding="8dp"
                        app:srcCompat="@drawable/ic_notifications"
                        app:tint="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notify"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <!-- DOCTOR -->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_blue"
                        android:padding="8dp"
                        app:srcCompat="@drawable/ic_doctor"
                        app:tint="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Doctor"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- ANTRIAN -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Antrian"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="55dp"/>


            <!-- ESTIMASI -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_blue_card"
                android:padding="14dp"
                android:elevation="3dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/ic_calendar"
                    app:tint="@color/white"/>

                <TextView
                    android:id="@+id/tvEstimasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimasi Antrian 0 Menit..."
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- DETAIL ANTRIAN -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_blue_card"
                android:padding="16dp"
                android:elevation="3dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Antrian No."
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvQueueNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/white"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Limit Pasien"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvLimit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3/15"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!-- FLOATING MESSAGE BUTTON -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMessage"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/blue_500"
        app:srcCompat="@drawable/ic_message"
        app:tint="@color/white"
        android:contentDescription="Message Button"
        android:elevation="8dp" />

    <!-- FLOATING CHAT BOX -->
    <LinearLayout
        android:id="@+id/chatBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_chatbox"
        android:elevation="10dp"
        android:padding="16dp"
        android:visibility="gone"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/fabMessage"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- HEADER CHAT -->
        <!-- HEADER CHAT (perbaikan) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ’¬ Chat Customer Service"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/btnCloseChat"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="Close chat"
                app:srcCompat="@drawable/ic_close"
                android:padding="4dp"/>
        </LinearLayout>

        <!-- PESAN -->
        <TextView
            android:id="@+id/chatMessages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Halo!"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:textSize="14sp"/>

        <!-- OPSI PILIHAN -->
        <TextView
            android:id="@+id/optionKlinik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/bg_option"
            android:text="ðŸ¥ Informasi Klinik"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/optionJadwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/bg_option"
            android:text="ðŸ“… Jadwal Dokter"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/optionAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/bg_option"
            android:text="ðŸ’¬ Chat dengan Admin/Dokter"
            android:textColor="@color/black"
            android:textSize="14sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
