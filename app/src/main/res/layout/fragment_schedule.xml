<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleFragment">

    <!-- Background biru melengkung -->
    <View
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/bg_top_curve" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:overScrollMode="never">

        <LinearLayout
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- CARD ANTRIAN UTAMA -->
            <LinearLayout
                android:id="@+id/cardQueue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:elevation="6dp"
                android:background="@drawable/bg_blue_card"
                android:clipToOutline="true"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Antrian Saat Ini"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <!-- Nilai di-update dari kode -->
                    <TextView
                        android:id="@+id/tvCurrentQueue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="28sp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:layout_marginHorizontal="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Limit Pasien"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <!-- Nilai di-update dari kode -->
                    <TextView
                        android:id="@+id/tvLimitPatient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="28sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Card Estimasi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_blue_card"
                android:orientation="horizontal"
                android:padding="16dp"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/white"
                    android:layout_marginEnd="8dp" />

                <!-- Nilai di-update dari kode -->
                <TextView
                    android:id="@+id/tvEstimation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimasi Antrian: -"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Tombol Ambil Antrian -->
            <Button
                android:id="@+id/btnTakeQueue"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Ambil Antrian"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:backgroundTint="@color/primary_blue"
                android:textColor="@android:color/white"
                android:elevation="4dp" />

            <!-- CARD NOMOR ANTRIAN SAJA -->
            <LinearLayout
                android:id="@+id/queueInfoBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_white_rounded"
                android:padding="18dp"
                android:layout_marginTop="22dp"
                android:visibility="gone"
                android:elevation="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:animateLayoutChanges="true">

                <TextView
                    android:id="@+id/tvQueueNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nomor Antrian Anda: -"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTapHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Tap untuk lihat detail)"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>