<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background putih -->
    <solid android:color="@android:color/white" />

    <!-- Border hitam tipis -->
    <stroke
        android:width="1dp"
        android:color="@android:color/black" />

    <!-- Sudut agak membulat -->
    <corners android:radius="4dp" />

    <!-- Padding internal biar teks nggak mepet -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
